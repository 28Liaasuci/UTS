#include <iostream>

using namespace std;

int main() {
    
    string nama;
    int uts,uas,tugas,Nilai_akhir,i;
    for (i=1; i<=20; i++){
        cout << endl;
        cout << endl;
        cout << "Mahasiswa yang ke-" << i <<endl;
        cout << "Nama : ";
        cin >> nama;
        cout << "Nilai uts : ";
        cin >> uts;
        cout << "Nilai uas : ";
        cin >> uas;
        cout << "Nilai tugas : ";
        cin >> tugas;
        na = ((uts*30)/100)+((uas*40)/100)+((tugas*30)/100);
        cout << endl;
        cout << "Nama : " << nama << endl;
        cout << "Nilai_akhir : " << Nilai_akhir << endl;
        if(Nilai_akhir <70){
        cout << "Indeks Nilai D";
        } else if(Nilai_akhir >=70 and Nilai_akhir < 80){
            cout << "Indeks Nilai C";
        } else if(Nilai_akhir >=80 and Nilai_akhir < 90){
            cout << "Indeks Nilai B";
        } else if(Nilai_akhir >=90){
            cout << "Indeks Nilai A";
        }
    }
   return 0; 
}
