#include <iostream>

using namespace std;

int main() {

    int n,i;
    cout << "masukkan nilai x: ";
    cin >> n;
    for(i=0; i<=n; i++){
        if(i==0){
            i=i+2;
            cout<<"F (x)= 1 ";
        }
        if(i%2==0){
            cout << "-1/" << i << " ";
        }else{
            cout << "+1/" << i << " ";
        }
    }
return 0;
}


float rumus,jumlah,total;
    cout<<"\n";
    jumlah=0;
    total=0;
    rumus=-1;
    for(int z=1; z<=n; z++){
    rumus=(rumus*(-1));
    total=rumus/z;
    jumlah= jumlah + total;
    if(z==1)
    cout<<"("<<total<<")";
    if(z>1)
    cout<<"+("<<total<<")";
    }
    cout << "\n hasil perhitungan = " << jumlah;
    
    return 0;
} 
